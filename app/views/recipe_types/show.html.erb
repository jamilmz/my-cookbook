<h1> <%= @recipe_type.name %> </h1>

<% if @recipes.count > 0 %>
	<% @recipes.each do |recipe| %>
	  <h1> <%= recipe.title %> </h1>
	  <ul>
	  	<li> <%= recipe.recipe_type.name %> </li>
	  	<li> <%= recipe.cuisine.name %> </li>
	  	<li> <%= recipe.difficulty %> </li>
	  	<li> <%= recipe.cook_time %> minutos </li>
	  </ul>
	<% end %>
<% else %>
  <h1> Nenhuma receita encontrada para este tipo de receitas </h1>
<% end %>

