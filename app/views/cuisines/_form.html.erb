<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-4">
    <%= render 'shared/aside' %>
  </div>

  <div class="container-fluid">
    <div class="col-md-8">
      <div class="form-horizontal">
        <%= form_for(@cuisine) do |f| %>

          <%= flash[:error] %>

          <div class="form-group">
            <p>
              <%= f.label :name%> <br />
              <%= f.text_field :name %>
            </p>
          </div>
          <div class="form-group">
            <p>
              <%= f.submit(I18n.t :submit, class: "btn btn-default") %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
