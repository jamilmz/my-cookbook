<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-4">
    <%= render 'shared/aside' %>
  </div>

  <div class="container-fluid">
    <div class="col-md-8">
      <div class="row">
        <div class="cold-md-4 col-sm-6">
          <h1> Nova receita </h1>
          <% if @recipe.errors.any? %>
           <h1> Você deve informar todos os dados da receita </h1>
          <% end %>

          <div class="form-horizontal">
            <%= form_for(@recipe) do |form| %>
              <div class="form-group">
                <p>
                  <%= form.label :title, 'Título' %>
                  <%= form.text_field :title %>
                </p>
              </div>
              <div class="form-group">
                <p>
                  <%= form.label :recipe_type_id, 'Tipo da Receita' %>
                  <%= form.collection_select(:recipe_type_id, RecipeType.all, :id, :name) %>
                </p>
              </div>
              <div class="form-group">
                <p>
                  <%= form.label :cuisine_id, 'Cozinha' %>
                  <%= form.collection_select(:cuisine_id, Cuisine.all, :id, :name) %>
                </p>
              </div>
              <div class="form-group">
                <p>
                  <%= form.label :difficulty, 'Dificuldade' %>
                  <%= form.text_field :difficulty %>
                </p>
              </div>
              <div class="form-group">
                <p>
                  <%= form.label :cook_time, 'Tempo de Preparo' %>
                  <%= form.text_field :cook_time %>
                </p>
              </div>
              <div class="form-group">
                <p>
                  <%= form.label :ingredients, 'Ingredientes' %>
                  <%= form.text_field :ingredients %>
                </p>
              </div>
              <div class="form-group">
                <p>
                  <%= form.label :method, 'Como Preparar' %>
                  <%= form.text_field :method %>
                </p>
              </div>
              <div class="form-group">
                <p>
                  <%= form.submit('Enviar', class: "btn btn-default") %>
                </p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
